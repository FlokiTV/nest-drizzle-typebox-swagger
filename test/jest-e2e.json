{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/common/$1",
    "^@api/(.*)$": "<rootDir>/../src/api/$1",
    "^@db/(.*)$": "<rootDir>/../src/common/drizzle/$1"
  }
}
